<%- include('./partial/header.ejs') %>

    <section>
        <nav class="navbar navbar-expand-lg nav-color " data-bs-theme="dark">
            <div class="container-fluid">
                <a class=" " href="#">
                    <div class="logo-box">
                        <img class="" src="images/r.png" alt="this is logo images">
                    </div>

                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01"
                    aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse justify-content-end" id="navbarColor01">
                    <ul class="navbar-nav ">
                        <a href="/">
                            <li> <button class="btn btn-color ">Home</button></li>
                        </a>
                    </ul>
                </div>
            </div>
        </nav>
    </section>

    <p id="output"
        style="margin-top: 2rem; color: aliceblue; text-align: center; font-size: 2rem;  background: linear-gradient(-20deg, #9900ef 0%, #0693e3 100%);">
        hello</p>

    <div class="container table-responsive mt-5 z-5">
        <table class="table text-white text-nowrap border-0">
            <thead class="table-head border-0 ">
                <tr>
                    <th scope="col">Roll-Number</th>
                    <th scope="col">Name</th>
                    <th>Present</th>
                    <th>Absent</th>
                    <th>Submit</th>
                </tr>
            </thead>
            <tbody class="table-body border-0">
                <% dat.forEach((item)=>{ %>
                    <tr>
                        <td class="t-data"><span>
                                <%= item.RollNumber %>
                            </span></td>
                        <td class="t-data"><span>
                                <%= item.Student_name %>
                            </span></td>
                        <form action="/student/attendance/<%= item._id %>" method="post">
                            <td class="t-data">
                                <button class="btn btn-secondary">
                                    <input type="radio" name="Attent" value="Present" required>
                                </button>
                            </td>
                            <td class="t-data">
                                <button class="btn btn-secondary">
                                    <input type="radio" name="Attent" value="Absent" required>
                                </button>
                            </td>
                            <td class="t-data">
                                <button type="submit" class="btn bg-warning mx-auto">Submit</button>

                            </td>
                        </form>

                        <% }) %>
                    </tr>

            </tbody>
        </table>

    </div>





    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz" crossorigin="anonymous"></script>
    <script src="js/main.js"></script>
    </body>
    </html>
    