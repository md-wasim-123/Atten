        <p id="output"
            style="margin-top: 2rem; color: aliceblue; text-align: center; font-size: 2rem;  background: linear-gradient(-20deg, #9900ef 0%, #0693e3 100%);">
        </p>

       

        <form action="/student/attendance" method="post">
            <div class="container table-responsive mt-5 z-5 text-center stud-table">

                <table class="table text-white text-nowrap border-0">
                    <thead class="table-head border-0">
                        <tr>
                            <th scope="col">Roll-Number</th>
                            <th scope="col">Name</th>
                            <th>Select</th>
                        </tr>
                    </thead>
                    <tbody class="table-body border-0">
                        <% dat.forEach((item,index)=> { %>
                            <tr>
                                <td class="t-data">
                                    <%= item.RollNumber %>
                                </td>
                                <td class="t-data">
                                    <%= item.Student_name %>
                                </td>
                                <input type="hidden" name="name" value="<%= item.Student_name %>">
                                <td class="t-data">
                                    <select id="select" name="input" class="form-select"  aria-label="Default select example">
                                        <option selected>Select</option>
                                        <option value="present">Present</option>
                                        
                                        <option value="absent">Absent</option>
                                    </select>
                                </td>
                            </tr>
                            <% }) %>
                    </tbody>
                </table>
                <button type="submit" class="btn bg-info ">Submit Attendance</button>
            </div>
        </form>



    </main>


