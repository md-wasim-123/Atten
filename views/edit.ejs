                        <label for="text" class="form-label text-white">Name</label>
                        <input type="text" class="form-control" required name="Student_name"
                            value="<%= dat.Student_name %>" />
                    </div>
                    <div class="mb-3">
                        <label for="text" class="form-label text-white">Birthday:</label>
                        <input type="text" class="form-control" required name="dob" value="<%= dat.dob %>">
                    </div>
                    <button type="submit" class="btn btn-color">Submit</button>
                </form>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz" crossorigin="anonymous"></script>
